{
  "name": "microfrontend_turbo_test",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "host": "turbo dev --filter=host-next",
    "remote": "turbo dev --filter=remote-next",
    "dev": "NEXT_PRIVATE_LOCAL_WEBPACK=true turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.11",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "ui": "*",
    "jotai":"*"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}